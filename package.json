{
  "private": true,
  "name": "orion",
  "version": "1.0.0",
  "description": "the autodesk ui library",
  "main": "index.js",
  "scripts": {
    "test": "npm run compile && lerna run lint && lerna run test && npm run ensure-copyright",
    "build": "lerna run build",
    "clean": "node ./packages/scripts/orion.js clean",
    "compile": "node ./packages/scripts/orion.js compile",
    "deploy-snapshot": "node ./packages/scripts/orion.js deploy --build-id $CIRCLE_BUILD_NUM",
    "deploy-master": "node ./packages/scripts/orion.js deploy --build-id=master",
    "copy-package-builds": "node ./packages/scripts/orion.js copy-package-builds",
    "ensure-copyright": "node ./packages/scripts/orion.js ensure-copyright --dir ./"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orion-ui/orion.git"
  },
  "author": "Autodesk Inc.",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/orion-ui/orion/issues"
  },
  "homepage": "https://github.com/orion-ui/orion#readme",
  "devDependencies": {
    "babel-preset-react-app": "^2.0.1",
    "eslint": "^3.11.1",
    "lerna": "2.0.0-beta.31"
  }
}
