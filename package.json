{
  "private": true,
  "name": "orion",
  "version": "1.0.0",
  "description": "the autodesk ui library",
  "main": "index.js",
  "scripts": {
    "build": "lerna run build && npm run copy-package-builds && npm run set-marketing-to-root",
    "copy-package-builds": "node ./scripts/copy-package-builds.js",
    "deploy-master": "npm run deploy -- --build-id=master",
    "deploy-snapshot": "npm run deploy -- --build-id $CIRCLE_BUILD_NUM",
    "deploy": "node ./scripts/deploy.js --gh-token $GITHUB_TOKEN --gh-sha $CIRCLE_SHA1",
    "ensure-copyright": "node ./scripts/ensure-copyright.js --dir ./",
    "gemini": "SAUCE_CONNECT_VERSION=4.4.5 gemini test gemini/*",
    "gemini-report": "gemini test gemini/* --reporter html --reporter flat",
    "gemini-update": "gemini update gemini/*",
    "set-marketing-to-root": "node ./scripts/set-package-to-root.js -p marketing",
    "test-ci": "lerna run test-ci",
    "test": "lerna run lint && npm run specs && npm run ensure-copyright",
    "start": "lerna run start --no-sort --stream --concurrency 50",
    "start-playground": "node scripts/start-playground.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orion-ui/orion.git"
  },
  "author": "Autodesk Inc.",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/orion-ui/orion/issues"
  },
  "homepage": "https://github.com/orion-ui/orion#readme",
  "devDependencies": {
    "commander": "^2.9.0",
    "github": "^8.0.0",
    "glob": "^7.1.1",
    "s3": "^4.4.0",
    "shelljs": "^0.7.5",
    "aws-sdk": "^2.7.11",
    "babel-cli": "^6.18.0",
    "babel-preset-react-app": "^2.0.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "eslint": "^3.11.1",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.6.1",
    "codacy-coverage": "^2.0.0",
    "enzyme": "^2.6.0",
    "es6-promise": "^4.0.5",
    "jsdom": "9.8.3",
    "jsdom-global": "2.1.0",
    "lerna": "2.0.0-rc.1",
    "nock": "^9.0.2",
    "nyc": "^10.1.2",
    "react": "^15.4.1",
    "react-addons-test-utils": "^15.4.1",
    "raf-stub": "^2.0.0",
    "react-dom": "^15.4.1",
    "sinon-chai": "^2.8.0"
  }
}
