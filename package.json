{
  "private": true,
  "name": "orion",
  "version": "1.0.0",
  "description": "the autodesk ui library",
  "main": "index.js",
  "scripts": {
    "build": "lerna run build",
    "clean": "node ./packages/scripts/orion.js clean",
    "compile": "node ./packages/scripts/orion.js compile",
    "copy-package-builds": "node ./packages/scripts/orion.js copy-package-builds",
    "deploy-master": "npm run deploy -- --build-id=master",
    "deploy-snapshot": "npm run deploy -- --build-id $CIRCLE_BUILD_NUM",
    "deploy": "node ./packages/scripts/orion.js deploy --gh-token $GITHUB_TOKEN --gh-sha $CIRCLE_SHA1",
    "ensure-copyright": "node ./packages/scripts/orion.js ensure-copyright --dir ./",
    "gemini": "gemini test gemini/*",
    "gemini-report": "gemini test gemini/* --reporter html --reporter flat",
    "gemini-update": "gemini update gemini/*",
    "prepublish": "bower install",
    "set-marketing-to-root": "node ./packages/scripts/orion.js set-package-to-root -p marketing",
    "specs-ci": "node ./packages/scripts/orion.js specs --sauce --report",
    "specs": "node ./packages/scripts/orion.js specs",
    "test-ci": "npm run compile && lerna run lint && npm run specs-ci && npm run ensure-copyright",
    "test": "npm run compile && lerna run lint && npm run specs && npm run ensure-copyright"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orion-ui/orion.git"
  },
  "author": "Autodesk Inc.",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/orion-ui/orion/issues"
  },
  "homepage": "https://github.com/orion-ui/orion#readme",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-react-app": "^2.0.1",
    "babelify": "^7.3.0",
    "bower": "^1.8.0",
    "browserify": "^13.3.0",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.6.1",
    "codacy-coverage": "^2.0.0",
    "enzyme": "^2.6.0",
    "es6-promise": "^4.0.5",
    "eslint": "^3.11.1",
    "gemini": "^4.14.3",
    "gemini-sauce": "^1.0.0",
    "jsdom": "9.8.3",
    "jsdom-global": "2.1.0",
    "lerna": "2.0.0-beta.38",
    "nock": "^9.0.2",
    "nyc": "^10.1.2",
    "react": "^15.4.1",
    "react-addons-test-utils": "^15.4.1",
    "raf-stub": "^2.0.0",
    "react-dom": "^15.4.1",
    "sinon-chai": "^2.8.0",
    "web-component-tester": "4.2.2",
    "web-component-tester-istanbul": "^0.10.0"
  }
}
