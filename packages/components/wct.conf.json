{
  "verbose": false,
  "suites": [
    "test/runner.html"
  ],
  "plugins": {
    "local": {
      "browsers": [
        "chrome"
      ]
    },
    "istanbul": {
      "disabled": false,
      "dir": "coverage/wct",
      "reporters": [
        "text-summary",
        "lcov",
        "json"
      ],
      "include": [
        "**/*.js"
      ],
      "exclude": [
        "**/bower_components/**"
      ]
    },
    "sauce": {
      "disabled": true,
      "browsers": [
        {
          "browserName": "chrome",
          "platform": "macOS 10.12",
          "version": "54.0"
        }
      ]
    }
  }
}