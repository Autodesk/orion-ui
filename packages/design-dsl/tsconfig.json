{
  "version": "2.0.3",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "2017-02-06",
    "allowJs": true
  },
  "include": [
    "typings_custom/custom.d.ts",
    "modules/**/*.ts"
  ],

  "types": [
    "mocha",
    "shelljs",
    "node"
  ]
}