{
  "name": "@orion-ui/react",
  "version": "1.0.3",
  "description": "orion ui react components",
  "main": "lib/index.js",
  "jest": {
    "coverageDirectory": "coverage/jest",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  },
  "scripts": {
    "lib": "babel src --out-dir lib --copy-file",
    "gemini-report": "gemini test gemini/* --reporter html --reporter flat",
    "gemini-update": "gemini update gemini/*",
    "gemini": "gemini test gemini/*",
    "jest-coverage": "jest --coverage",
    "jest": "jest --watch",
    "build": "NODE_ENV=production npm run lib",
    "lint": "eslint .",
    "report-coverage": "cat coverage/jest/lcov.info | codacy-coverage",
    "start-storybook": "start-storybook -p 9001 -c .storybook",
    "start": "NODE_ENV=development npm run lib -- --watch",
    "storybook": "build-storybook -c .storybook -o build",
    "test-ci": "jest --coverage && npm run report-coverage && npm run gemini"
  },
  "author": "Autodesk Inc.",
  "license": "Apache-2.0",
  "dependencies": {
    "@orion-ui/components": "^1.0.3",
    "@orion-ui/style": "^1.0.3"
  },
  "peerDependencies": {
    "react": "^15.4.1",
    "react-dom": "^15.4.1"
  },
  "devDependencies": {
    "@kadira/storybook": "^2.34.0",
    "@kadira/storybook-addon-knobs": "^1.7.1",
    "@kadira/storybook-addons": "^1.6.1",
    "@orion-ui/eslint-config-orion": "^1.0.0",
    "babel-cli": "^6.18.0",
    "babel-jest": "^19.0.0",
    "gemini": "^4.14.3",
    "gemini-sauce": "^1.0.0",
    "codacy-coverage": "^2.0.1",
    "eslint": "^3.11.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "jest": "^19.0.2",
    "jsdom-global": "2.1.0",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-syntax-highlighter": "^5.1.3",
    "react-test-renderer": "^15.4.2",
    "sinon": "^1.17.6"
  }
}
