{
  "verbose": false,
  "suites": ["test/runner.html"],
  "plugins": {
    "local": {
      "browsers": ["chrome"]
    },
    "sauce": {
      "disabled": true,
      "browsers": [
        {
          "browserName": "chrome",
          "platform": "macOS 10.12",
          "version": "54.0"
        }
      ]
    },
    "istanbul": {
      "dir": "./coverage",
      "reporters": ["text-summary", "lcov"],
      "include": [
        "**/*.js",
        "**/*.html"
      ],
      "exclude": [
        "/bower_components/**/*.js",
        "/bower_components/**/*.html",
        "/test/**/*.js",
        "/test/**/*.html"
      ]
    }
  }
}
